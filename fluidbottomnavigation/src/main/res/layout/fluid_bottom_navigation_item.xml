<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fluidBottomNavigationHeight"
        android:background="@android:color/white"
        android:minWidth="@dimen/fluidBottomNavigationHeight"
        android:paddingLeft="@dimen/fluidBottomNavigationPaddingLeft"
        android:paddingRight="@dimen/fluidBottomNavigationPaddingRight"
        android:paddingStart="@dimen/fluidBottomNavigationPaddingLeft"
        android:paddingEnd="@dimen/fluidBottomNavigationPaddingRight">

    <ImageView
            android:id="@+id/itemIcon"
            android:layout_width="@dimen/fluidBottomNavigationIconSize"
            android:layout_height="@dimen/fluidBottomNavigationIconSize"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/fluidBottomNavigationPaddingBottom"
            android:layout_marginTop="@dimen/fluidBottomNavigationPaddingTop"
            tools:src="@android:drawable/btn_star"
            android:gravity="center"/>

    <TextView
            android:id="@+id/itemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:lines="1"
            android:textColor="@color/textColor"
            android:textSize="@dimen/fluidBottomNavigationTextSize"
            tools:text="Label One"/>
</FrameLayout>